<main class="container mb-5">

	<div class="row mb-3">

		<div class="col-md-12 text-center mt-5">
			<h1>Search Results</h1>
			<p>
				{{#if this.results}}
				<i>Showing results for {{this.searchBy}} '{{this.searchQuery}}'</i>
				{{else}}
				<i>No search results for {{this.searchBy}} '{{this.searchQuery}}'</i>
				{{/if}}
			</p>
			<hr class="mt-3">

		</div>
	</div>
	
	{{#each results}}
	<div class="searchrow row mb-3">
		<div class="col-md-3 text-center">
			<img class="search-image" src="{{this.image}}">
		</div>
		<div class="searchbody col-md-6">
			<article class="card mt-3">
				<div class="card-body row">
					<div class="col-md-11">
						<h4 class="card-title">{{this.title}}</h4>
						<h6 class="card-subtitle mb-2 text-muted">by
							<span>
								<a href="#">{{this.author}}</a>
							</span>
						</h6>
						<p>
							<b class="text-uppercase">{{this.numShelved}} in stock </b>
							<span class="alert">
								{{!-- <i> {{this.reservationStatus}}</i> --}}
							</span>
						</p>
						<button class="btn btn-success text-uppercase action-btn-reserve-media" type="button" data-medium-id="{{this.id}}">
						Reserve Book
					</button>
				</div>
				<div class="col-md-1">
					<span class="favorite-book actionBtnFav" data-medium-id="{{this.id}}">
						<i class="fa fa-heart-o" aria-hidden="true"></i>
					</span>
				</div>
			</div>
			</article>
		</div>
	</div>
	
	<hr>
	{{/each}}


</main>